<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Login" />

        <EditText
            android:id="@+id/settings_login"
            android:layout_marginStart="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Undefined" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <EditText
            android:id="@+id/settings_password"
            android:layout_marginStart="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Undefined"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/settings_email"
            android:layout_marginStart="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Undefined"
            android:enabled="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
      android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save changes"
            android:id="@+id/settings_save_changes"
            android:background="@null"
            style="?android:attr/buttonBarButtonStyle"/>

        <ProgressBar
            android:layout_marginStart="15dp"
            android:id="@+id/settings_save_changes_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleSmall"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active subscriptions"
        android:id="@+id/settings_textView"
        android:layout_marginTop="15dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"/>

    <ProgressBar
        android:id="@+id/settings_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1" />

    <ListView
        android:id="@+id/lvSubscriptions"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="50"
        android:divider="#2dc1f5"
        android:dividerHeight="1dp" />

</LinearLayout>
