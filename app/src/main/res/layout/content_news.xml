<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/news_constraintLayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pc.emil.coffeex.activities.NewsActivity"
    tools:showIn="@layout/app_bar_news"
    android:background="@drawable/placeholder">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_progressBar"
        style="?android:attr/progressBarStyle"
        app:layout_constraintBottom_toTopOf="@id/news_constraintLayout"
        app:layout_constraintBottom_toBottomOf="@id/news_constraintLayout"
        app:layout_constraintRight_toLeftOf="@id/news_constraintLayout"
        app:layout_constraintRight_toRightOf="@id/news_constraintLayout"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#5886DE"
        android:dividerHeight="1dp">
    </ListView>

</android.support.constraint.ConstraintLayout>