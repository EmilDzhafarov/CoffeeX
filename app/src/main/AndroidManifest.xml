<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pc.emil.coffeex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/coffee_shops"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CoffeeShopActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/login_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterUserActivity"
            android:label="@string/register_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SubscriptionsActivity"
            android:label="@string/subscriptions_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CoffeeActivity"
            android:label="@string/available_drinks" />
        <activity
            android:name=".activities.CoffeeShopCommentsActivity"
            android:label="@string/comments_label" />
        <activity android:name=".activities.SettingsActivity"
            android:label="@string/user_profile"/>
        <activity
            android:name=".activities.NewsActivity"
            android:label="@string/last_news_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ShowPieceOfNewsActivity"
            android:label="@string/details_label"/>
        <activity android:name=".activities.SubscriptionInfoActivity"
            android:label="@string/details_label"/>
    </application>

</manifest>